<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" 
	android:layout_height="match_parent"
	android:padding="5dp"
	android:orientation="vertical"
	android:gravity="center">
	<FrameLayout
	    android:layout_width="65dp"
	    android:layout_height="65dp"
	    android:layout_gravity="center" >
	
	    <ImageView
	        android:id="@+id/imgApp"
	        android:layout_width="65dp"
	        android:layout_height="65dp"
	        android:padding="5dp"
	        android:scaleType="centerInside" />

	    <ImageView
	        android:id="@+id/app_selected"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:src="@drawable/ic_selected_app"
	        android:visibility="gone" />
	</FrameLayout>

    <LinearLayout 
        android:id="@+id/layout_install"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-6dp"
        android:orientation="horizontal"
        android:gravity="right|center_vertical">
        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/ic_app_installed" />
        <TextView
            android:text="@string/haveinstalled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF6EA818"
            android:textSize="10sp" />
    </LinearLayout>

	<TextView android:id="@+id/tvAppLabel"
	    android:layout_width="match_parent" 
		android:layout_height="0dp"
		android:layout_weight="1"
		android:maxLines="2"
		android:lines="2"
		android:gravity="center_horizontal"
		android:textSize="@dimen/list_secondray_textsize"
		android:textColor="@color/listbar_main" />
</LinearLayout>
